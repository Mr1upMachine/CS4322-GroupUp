<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutEventRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageEventRowBackground"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="#111111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageEventRowColor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/triangle"
        app:layout_constraintTop_toTopOf="@+id/imageEventRowBackground"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageEventRowSubHeart"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_favorite_white_18dp"
        app:layout_constraintTop_toTopOf="@+id/imageEventRowBackground"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageEventRowOwnStar"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_star_white_18dp"
        app:layout_constraintTop_toTopOf="@+id/imageEventRowBackground"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textEventRowLocation"
        android:layout_width="225dp"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="8dp"
        android:elevation="@android:dimen/app_icon_size"
        android:gravity="left"
        android:text="Location, Loc"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textEventRowTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:elevation="@android:dimen/app_icon_size"
        android:text=" 00/00/00 00:00"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textEventRowLocation"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textEventRowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Title goes here"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageEventRowBackground" />

</android.support.constraint.ConstraintLayout>