<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutEventRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageEventRowBackground"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:src="#111111" />

    <ImageView
        android:id="@+id/imageEventRowColor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageEventRowBackground"
        app:srcCompat="@drawable/triangle" />

    <ImageView
        android:id="@+id/imageEventRowSubStar"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageEventRowBackground"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_star_rate_white_18dp" />

    <ImageView
        android:id="@+id/imageEventRowOwnStar"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageEventRowBackground"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_star_border_black_18dp" />

    <TextView
        android:id="@+id/textEventRowLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageEventRowBackground"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"
        android:text="Location, Loc" />

    <TextView
        android:id="@+id/textEventRowTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textEventRowLocation"
        android:layout_alignBottom="@+id/textEventRowLocation"
        android:layout_alignParentEnd="true"
        android:paddingEnd="10dp"
        android:text=" 00/00/00 00:00" />

</RelativeLayout>