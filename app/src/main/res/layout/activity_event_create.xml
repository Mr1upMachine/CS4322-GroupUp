<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutEventCreate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/darker_gray"
    android:visibility="visible"
    tools:context="com.example.seanh.groupup.EventCreateActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintEventCreateTop"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@android:color/holo_blue_light"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewCreateEventPicture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/buttonCreateEventPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_add_circle_outline_white"
            android:elevation="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCreateEventPicture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageViewCreateEventPicture" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintEventCreateBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintEventCreateTop"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/editEventCreateName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Event Title"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/editEventCreateTypeSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editEventCreateDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Event Description"
            android:inputType="textMultiLine"
            android:singleLine="false"
            app:layout_constraintEnd_toEndOf="@+id/editEventCreateTypeSpinner"
            app:layout_constraintStart_toStartOf="@+id/editEventCreateName"
            app:layout_constraintTop_toBottomOf="@+id/editEventCreateName" />

        <EditText
            android:id="@+id/editAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Event Address"
            android:inputType="textPostalAddress"
            app:layout_constraintEnd_toStartOf="@+id/buttonEventCreateMaps"
            app:layout_constraintStart_toStartOf="@+id/editEventCreateDescription"
            app:layout_constraintTop_toBottomOf="@+id/editEventCreateDescription" />

        <EditText
            android:id="@+id/editEventCreateInitialAttenders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Initial Attendees"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@+id/editMaximumAttenders"
            app:layout_constraintStart_toStartOf="@+id/editAddress"
            app:layout_constraintTop_toBottomOf="@+id/editAddress" />

        <EditText
            android:id="@+id/editMaximumAttenders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Max Attendees"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/buttonEventCreateMaps"
            app:layout_constraintStart_toEndOf="@+id/editEventCreateInitialAttenders"
            app:layout_constraintTop_toTopOf="@+id/editEventCreateInitialAttenders" />

        <TextView
            android:id="@+id/textEventCreateStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="?attr/editTextBackground"
            android:ems="5"
            android:text="Start Time"
            app:layout_constraintStart_toStartOf="@+id/editEventCreateInitialAttenders"
            app:layout_constraintTop_toBottomOf="@+id/editEventCreateInitialAttenders" />

        <TextView
            android:id="@+id/textEventCreateEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="?attr/editTextBackground"
            android:ems="5"
            android:text="End Time"
            app:layout_constraintStart_toEndOf="@+id/textEventCreateStartTime"
            app:layout_constraintTop_toTopOf="@+id/textEventCreateStartTime" />

        <TextView
            android:id="@+id/textEventCreateStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="?attr/editTextBackground"
            android:text="Start Date"
            app:layout_constraintEnd_toEndOf="@+id/textEventCreateStartTime"
            app:layout_constraintStart_toStartOf="@+id/textEventCreateStartTime"
            app:layout_constraintTop_toBottomOf="@+id/textEventCreateStartTime" />

        <TextView
            android:id="@+id/textEventCreateEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/editTextBackground"
            android:text="End Date"
            app:layout_constraintEnd_toEndOf="@+id/textEventCreateEndTime"
            app:layout_constraintStart_toStartOf="@+id/textEventCreateEndTime"
            app:layout_constraintTop_toBottomOf="@+id/textEventCreateEndTime" />

        <Button
            android:id="@+id/buttonEventCreateMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maps"
            app:layout_constraintBottom_toBottomOf="@+id/editAddress"
            app:layout_constraintEnd_toEndOf="@+id/editEventCreateDescription"
            app:layout_constraintTop_toTopOf="@+id/editAddress"
            app:layout_constraintVertical_bias="0.0" />

        <Spinner
            android:id="@+id/editEventCreateTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:entries="@array/eventTypesArray"
            app:layout_constraintBottom_toBottomOf="@+id/editEventCreateName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editEventCreateName"
            app:layout_constraintTop_toTopOf="@+id/editEventCreateName" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabCreateEventSubmit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="8dp"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_check_white_18dp" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>


